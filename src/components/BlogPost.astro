---
import { Image } from "astro:assets";
import Prose from "./Prose.astro";
const {url, title, image, altText, date, description, post } = Astro.props;
const isImageObject = typeof image === "object";
---
<li class="my-8">
  <a href={url}>
    <article class="mx-auto card hover:shadow-md transition-transform duration-200 ease-in-out">
      <div class="card-body">
        <h2 class="card-title">{date}</h2>
        <h2 class="card-title">{title}</h2>
        <br/>
        {isImageObject ? (
          <Image class="heroImage mx-auto w-full max-w-2xl rounded-xl object-cover" src={image} alt={altText} widths={[400, 800, 1200]} sizes="100vw" />
        ) : (
          <img class="heroImage mx-auto max-w-2xl rounded-xl object-cover" src={image} alt={altText} />
        )}
        <Prose>
        <p>{description}</p>
      </Prose>
      </div>
    </article>
  </a>
</li>

